<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_register_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dell.initialstage.Register_user"
    tools:showIn="@layout/activity_register_user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="479dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:textColorHint="#6fe751"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Name"
                    android:paddingLeft="5dp"
                    android:textColor="#0b9e04"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/name"
                    android:singleLine="true"
                    android:saveEnabled="true"
                    android:maxLength="50" />


                <EditText
                    android:id="@+id/user_roll_no"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:textColorHint="#6fe751"
                    android:hint="Roll no"
                    android:textColor="#0b9e04"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:drawableLeft="@drawable/roll"
                    android:drawablePadding="10dp"
                    android:maxLines="10"
                    android:singleLine="true"
                    android:maxLength="10" />


                <EditText
                    android:id="@+id/user_branch"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:textColor="#0b9e04"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Branch"
                    android:textColorHint="#6fe751"
                    android:paddingLeft="5dp"
                    android:drawableLeft="@drawable/branch"
                    android:singleLine="true"
                    android:maxLength="30" />

                <EditText
                    android:id="@+id/user_year"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:textColor="#0b9e04"
                    android:ems="10"
                    android:hint="Year"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:drawableLeft="@drawable/year"
                    android:textColorHint="#6fe751"
                    android:maxLines="1"
                    android:maxLength="1" />


                <EditText
                    android:id="@+id/user_email"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:drawablePadding="10dp"
                    android:textColor="#0b9e04"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Email"
                    android:paddingLeft="5dp"
                    android:drawableLeft="@drawable/email"
                    android:textColorHint="#6fe751"
                    android:maxLines="140"
                    android:singleLine="true"
                    android:maxLength="140" />


                <EditText
                    android:id="@+id/user_phone_no"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#0b9e04"
                    android:background="@drawable/rounded_edittext"
                    android:cursorVisible="false"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Mobile no"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:drawableLeft="@drawable/mobile"
                    android:textColorHint="#6fe751"
                    android:singleLine="true"
                    android:maxLines="10"
                    android:maxLength="10" />

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/border_button"
                    android:text="submit"
                    android:textColor="#eff1ef"
                    android:typeface="monospace"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
