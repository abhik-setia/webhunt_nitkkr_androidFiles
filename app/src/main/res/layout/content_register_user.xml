<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_register_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dell.initialstage.Register_user"
    tools:showIn="@layout/activity_register_user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="479dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                >
                <EditText android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Name"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/user_name" />

                <EditText android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Roll no"
                    android:inputType="number"
                    android:ems="10"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/user_roll_no" />

                <EditText android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Branch"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/user_branch" />

                <EditText android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Year"
                    android:inputType="number"
                    android:ems="10"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/user_year" />

                <EditText android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:hint="Email"
                    android:id="@+id/user_email" />

                <EditText android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:inputType="phone"
                    android:ems="10"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:hint="Mobile no"
                    android:id="@+id/user_phone_no"
                    android:cursorVisible="false" />

                <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="submit"

                    android:textColor="#222"
                    android:id="@+id/submit_btn" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
