<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_thank_you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dell.initialstage.ThankYou"
    tools:showIn="@layout/activity_thank_you"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/thank_you_bk_imageview"
        android:src="@drawable/thank_you_bk_compressed"
        android:scaleType="centerCrop"/>

    <com.example.dell.initialstage.Typewriter
        android:text='"Thank You for taking part in the test :)"'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/Thank_you_textview"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:typeface="monospace"
        android:textColor="@color/textcolorWhite"
        android:textAlignment="center" />

    <TextView
        android:text="beleive you can and you are halfway there."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:typeface="monospace"
        android:textColor="@color/textcolorWhite"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"/>

</RelativeLayout>
