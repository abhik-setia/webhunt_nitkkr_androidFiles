<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_thank_you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dell.initialstage.ThankYou"
    tools:showIn="@layout/activity_thank_you"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bk2"
        android:scaleType="centerCrop"/>
    <com.example.dell.initialstage.Typewriter
        android:text="Thank You for taking part in the test :)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/Thank_you_textview"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textAlignment="center" />
</RelativeLayout>
